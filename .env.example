# Database
DATABASE_URL="postgresql://username:password@localhost:5432/crm_nexus"

# Redis
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# API Configuration
API_URL="http://localhost:3001"
WEB_URL="http://localhost:3000"
PORTAL_URL="http://localhost:3000"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Security
JWT_SECRET="your-jwt-secret-here"
ENCRYPTION_KEY="your-encryption-key-here"

# Rate Limiting
RATE_LIMIT_TTL="60"
RATE_LIMIT_MAX="100"

# Email Configuration (Resend)
RESEND_API_KEY="re_xxxxxxxxx"
EMAIL_FROM="noreply@bowmanskb.co.uk"

# Twilio
TWILIO_ACCOUNT_SID="ACxxxxxxxxx"
TWILIO_AUTH_TOKEN="xxxxxxxxx"
TWILIO_PHONE_NUMBER="+441234567890"

# DocuSign
DOCUSIGN_INTEGRATION_KEY="xxxxxxxxx"
DOCUSIGN_USER_ID="xxxxxxxxx"
DOCUSIGN_ACCOUNT_ID="xxxxxxxxx"
DOCUSIGN_BASE_PATH="https://demo.docusign.net/restapi"
DOCUSIGN_PRIVATE_KEY=""

# Xero
XERO_CLIENT_ID="xxxxxxxxx"
XERO_CLIENT_SECRET="xxxxxxxxx"
XERO_TENANT_ID="xxxxxxxxx"

# File Storage (S3 Compatible)
S3_ENDPOINT="https://s3.amazonaws.com"
S3_BUCKET="crm-nexus-files"
S3_ACCESS_KEY="xxxxxxxxx"
S3_SECRET_KEY="xxxxxxxxx"
S3_REGION="us-east-1"

# Outlook/Microsoft Graph
MICROSOFT_CLIENT_ID="xxxxxxxxx"
MICROSOFT_CLIENT_SECRET="xxxxxxxxx"
MICROSOFT_TENANT_ID="xxxxxxxxx"

# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Environment
NODE_ENV="development"

# Security Headers
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Feature Flags
ENABLE_VOICE_CALLING="true"
ENABLE_SMS="true"
ENABLE_DOCUSIGN="true"
ENABLE_XERO_INTEGRATION="true"
ENABLE_OUTLOOK_SYNC="true"
ENABLE_PORTAL_COMMENTS="true"
ENABLE_DESIGN_WATERMARKS="true"
ENABLE_OFFLINE_MODE="true"
ENABLE_BIOMETRIC_UNLOCK="true"
ENABLE_PUSH_NOTIFICATIONS="true"

# Mobile Push Notifications
EXPO_ACCESS_TOKEN="xxxxxxxxx"
FCM_SERVER_KEY="xxxxxxxxx"
APNS_KEY_ID="xxxxxxxxx"
APNS_TEAM_ID="xxxxxxxxx"
APNS_PRIVATE_KEY=""

# Monitoring & Logging
SENTRY_DSN=""
LOG_LEVEL="info"
ENABLE_QUERY_LOGGING="false"

# Backup Configuration
BACKUP_S3_BUCKET="crm-nexus-backups"
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"

# PDF Processing
PDF_PARSER_API_URL="http://localhost:8000"
PDF_PARSER_API_KEY="xxxxxxxxx"

# Webhooks
WEBHOOK_SECRET="your-webhook-secret"
