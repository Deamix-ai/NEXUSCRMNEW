{
  "name": "@crm/database",
  "version": "1.0.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "dev": "echo 'Database package ready - Use npm run db:studio to open Prisma Studio'",
    "build": "prisma generate",
    "generate": "prisma generate",
    "push": "prisma db push",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "seed": "tsx src/seed.ts",
    "studio": "prisma studio --schema ./schema.prisma",
    "reset": "prisma migrate reset --force"
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "bcryptjs": "^2.4.3",
    "nanoid": "^5.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "prisma": "^5.5.2",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  }
}
